{
  "name": "alarm-monitoring-client",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "npm-run-all build:css build:lottie && electron .",
    "dev": "npm-run-all build:lottie --parallel watch:css start:electron",
    "start:electron": "electron .",
    "build:css": "tailwindcss -i ./input.css -o ./tailwind.css",
    "watch:css": "tailwindcss -i ./input.css -o ./tailwind.css --watch",
    "build:lottie": "copyfiles -u 1 \"node_modules/@lottiefiles/lottie-player/dist/lottie-player.js\" .",
    "package": "npm-run-all build:css build:lottie && electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "electron": "^39.1.2",
    "electron-builder": "^26.0.12",
    "@tailwindcss/cli": "^4.1.17",
    "copyfiles": "^2.4.1",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4.1.17"
  },
  "dependencies": {
    "@lottiefiles/lottie-player": "^2.0.12",
    "ws": "^8.18.3"
  },
  "build": {
    "npmRebuild": false,
    "appId": "com.grafana.alarmmonitor",
    "productName": "Alarm Monitoring",
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "tailwind.css",
      "lottie-player.js",
      "alarm.mp3",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
